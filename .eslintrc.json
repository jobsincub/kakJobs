{
  "extends": [
    "next/core-web-vitals",
    "next/typescript",
    "plugin:prettier/recommended",
    "plugin:storybook/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "trailingComma": "es5",
        "semi": false,
        "singleQuote": true,
        "endOfLine": "auto",
        "printWidth": 100,
        "arrowParens": "avoid"
      }
    ],
    "import/no-default-export": "error"
  },
  "overrides": [
    {
      "files": ["app/**/*.tsx", "**/*.stories.tsx"],
      "rules": {
        "import/no-default-export": "off"
      }
    }
  ]
}